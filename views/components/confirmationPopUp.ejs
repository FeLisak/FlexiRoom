<style>
  <%- include('../css/confirmationPopUp.css') %>
</style>

<div id="<%= typeof id !== 'undefined' ? id : 'reservation-confirm-popup' %>" class="reservation-confirm-popup" style="display:none;">
  <div class="popup-content">
    <div class="popup-icon">
      <i class="bi bi-exclamation-triangle" style="font-size: 6rem; color: #FFE066;"></i>
    </div>
    <div class="popup-message" id="popup-message">
      <% if (variant === 'remove-reservation') { %>
        Are you sure you want to remove this reservation?
      <% } else { %>
        <%= typeof message !== 'undefined' ? message : 'Are you sure you want to book the room for day mm/dd/yy at hh:mm?' %>
      <% } %>
    </div>
    <div class="popup-buttons">
      <%- include('../components/button', {
        placeholder: "Cancel",
        type: "button",
        variant: "Cancel",
        id: typeof cancelId !== 'undefined' ? cancelId : "popup-cancel-btn"
      }) %>
      <%- include('../components/button', {
        placeholder: "Confirm",
        type: "button",
        variant: "Confirm",
        id: typeof confirmId !== 'undefined' ? confirmId : "popup-confirm-btn"
      }) %>
    </div>
  </div>
</div>